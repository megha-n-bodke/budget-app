
<div>
<%= form_with model:@category, url:categories_new_path do |f| %>
<div class="form-group mb-3  ms-3 col-md-4 col-lg-6">
<%= f.label :Category,  class:"mb-3"%>
<%= f.text_field :name, class:"form-control", placeholder:"Category Name"%>
</div>

<div class="form-group mb-3 ms-3 col-md-4 col-lg-6">
<%= f.label :URL, class:"mb-3"%>
<%= f.text_field :name, class:"form-control", placeholder:"Icon Url"%>
</div>

<div class="form-group mb-3 ms-3 col-md-4 col-lg-6">
<%= f.submit "Add Category", class:"btn btn-primary"%>
</div>
<% end %>
</div>
